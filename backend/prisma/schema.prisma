generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  googleId  String? @unique
  email     String  @unique
  password  String? // Para autenticaciÃ³n normal
  name      String
  image     String?
  posts     Post[]
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  authorId  String
  isPublic  Boolean  @default(false) // ðŸš€ Nuevo campo para determinar visibilidad
  author    User     @relation(fields: [authorId], references: [id])
}


