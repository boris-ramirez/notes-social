generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  googleId  String? @unique
  email     String  @unique
  password  String? // Para autenticaci√≥n normal
  name      String
  image     String?
  posts     Post[]
}

model Post {
  id        String  @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User @relation(fields: [authorId], references: [id])
}

